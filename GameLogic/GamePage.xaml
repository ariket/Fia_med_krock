                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/Assets/YellowCar.png" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>

            </Grid>

            <Image x:Name="DiceAnimation" Height="100" Width="100" Margin="5,25,5,5" HorizontalAlignment="Center" VerticalAlignment="Top" Source="/Assets/diceX.png" Stretch="UniformToFill"/>
            <Ellipse x:Name="ellipse1" HorizontalAlignment="Center" Height="11" Margin="0,28,0,0" Stroke="Black" VerticalAlignment="Top" Width="11" Fill="#FFF3F3F3" Visibility="Collapsed"/>
            <Ellipse x:Name="ellipse2" HorizontalAlignment="Center" Height="11" Margin="0,36,23,0" Stroke="Black" VerticalAlignment="Top" Width="11" Fill="#FFF3F3F3" Visibility="Collapsed"/>
            <Ellipse x:Name="ellipse3" HorizontalAlignment="Center" Height="11" Margin="-45,44,0,0" Stroke="Black" VerticalAlignment="Top" Width="11" Fill="#FFF3F3F3" Visibility="Collapsed"/>
            <Ellipse x:Name="ellipse4" HorizontalAlignment="Center" Height="11" Margin="48,43,0,0" Stroke="Black" VerticalAlignment="Top" Width="11" Fill="#FFF3F3F3" Visibility="Collapsed"/>
            <Ellipse x:Name="ellipse5" HorizontalAlignment="Center" Height="11" Margin="0,52,-24,0" Stroke="Black" VerticalAlignment="Top" Width="11" Fill="#FFF3F3F3" Visibility="Collapsed"/>
            <Ellipse x:Name="ellipse6" HorizontalAlignment="Center" Height="11" Margin="0,60,0,0" Stroke="Black" VerticalAlignment="Top" Width="11" Fill="#FFF3F3F3" Visibility="Collapsed"/>
            <Ellipse x:Name="ellipse7" HorizontalAlignment="Center" Height="11" Margin="0,44,0,0" Stroke="Black" VerticalAlignment="Top" Width="11" Fill="#FFF3F3F3" Visibility="Collapsed"/>

            <Button x:Name="RollDice" CornerRadius="5" Height="45" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" Click="RollDice_Click" >Rulla Tärning</Button>

        </Grid>
        <Grid x:Name="WinnerScreen" Grid.Row="0" Width="550" Height="550" Margin="5,5,5,5" Background="Lavender" RenderTransformOrigin="0.5,0.5" Visibility="Visible" CornerRadius="15">
            <Grid.RenderTransform>
                <CompositeTransform/>
            </Grid.RenderTransform>
            
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="  " Foreground="#000000" d:IsLocked="True" />
                <TextBlock Text="Grattis!" Foreground="#000000" FontSize="28" d:IsLocked="True" TextAlignment="Center" />
                <TextBlock x:Name="WinnerText" Foreground="#000000" FontSize="24" d:IsLocked="True" TextAlignment="Center" />
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button  x:Name="GoToMainMenuButton" Height="35" Width="75" CornerRadius="5" Background="CornflowerBlue"  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5,5,5,25" Click="GoToMainMenu_Click">Till Meny</Button>
                <Button  x:Name="ExitButton" Height="35" Width="75" CornerRadius="5" Background="CornflowerBlue"  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5,5,5,25" Click="ExitButton_Click">Avsluta</Button>
            </StackPanel>
